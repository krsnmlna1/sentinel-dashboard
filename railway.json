{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd sentinel-dashboard && npm run build",
    "installCommand": "cd sentinel-dashboard && npm install",
    "watchPatterns": ["sentinel-dashboard/**"]
  },
  "deploy": {
    "startCommand": "cd sentinel-dashboard && npm start",
    "numReplicas": 1
  }
}
